<div class="container">
          <br>
          <br>
          <br>      
        <div class="card">
                <div class="row">
                        <aside class="col-sm-5 border-right">
        <article class="gallery-wrap"> 
        <div class="img-big-wrap">
          <div><%= image_tag(@product.image.variant(resize: '600x700')) %></div>
        </div> <!-- slider-product.// -->
        </article> <!-- gallery-wrap .end// -->
                        </aside>
                        <aside class="col-sm-7">
        <article class="card-body p-5">
                <h3 class="title mb-3"><%= @product.name %></h3>
        
        <p class="price-detail-wrap"> 
                <span class="price h3 text-warning"> 
                        <span class="currency">CLP $</span><span class="num"><%= @product.price%></span>
                </span>  
        </p> <!-- price-detail-wrap .// -->
        <dl class="item-property">
          <dt>Descripcion</dt>
          <dd><p><%= @product.description  %></p></dd>
        </dl>
        <dl class="param param-feature">
          <dt>Stock</dt>
          <dd><h2><span class="badge badge-warning"><%= @product.stock %></span></h2></dd>
        </dl>  <!-- item-property-hor .// -->
        
        
        <hr>
                <div class="row">
                        <div class="col-sm-5">
                        <div class="col-sm-7">

                        </div> <!-- col.// -->
                </div> <!-- row.// -->
                <hr>
                <a href="#" class="btn btn-lg btn-outline-primary text-uppercase"> <i class="fas fa-shopping-cart"></i> Agregar al Carrito </a>
        </article> <!-- card-body.// -->
                        </aside> <!-- col.// -->
                </div> <!-- row.// -->
        </div> <!-- card.// -->