<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
    <div class="container center_div">
<div class="card">
    <article class="card-body">
     <h4 class="card-title mb-4 mt-1">Inicio de Sesion</h4>
      <p>
          <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%# link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
            <a href="<%= omniauth_authorize_path(resource_name, provider) %>" class="btn btn-block btn-facebook"> <i class="fab fa-facebook-f"></i> &nbsp; Login via facebook</a>
          <% end %>
          <% end %>
      </p>
      <hr>
        <div class="form-group input-icon">
          <i class="fa fa-user"></i>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control'%>
        </div> <!-- form-group// -->
        <div class="form-group input-icon">
          <i class="fa fa-lock"></i> 
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: '**********' %>
        </div> <!-- form-group// -->  
        <% if devise_mapping.rememberable? %>
           <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :recuerdame %>
          </div>
  <% end %>                                    
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <%= f.submit "Iniciar Sesion", class: 'btn btn-success'%>
                </div> <!-- form-group// -->
            </div>
            <div class="col-md-6 text-right">
            </div>                                            
        </div> <!-- .row// -->                                                                  
    </article>
    </div> <!-- card.// -->
  </div>
  <% end %>
</div>
</div>