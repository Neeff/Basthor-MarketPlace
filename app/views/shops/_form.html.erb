<%= form_with(model: shop, local: true) do |f| %>
        <div class="field">
                <%= f.label :Nombre_Tienda %>
                <%= f.text_field :name, class: 'form-control'%>
        </div>
        <%= f.hidden_field :user_id, value: current_user.id %>

        <div class="field">
                <%= f.label :Descripcion %>
                <%= f.text_area :description, class: 'form-control'%>
        </div>
        
        <div class="field">
                <%= f.label :Imagenes %>
                <%= f.drag_and_drop_file_field :images, nil, accept: 'image/png, image/jpeg, image/gif, image/tiff', multiple: true %>
        </div>
        <%= f.submit 'Crear Tienda', class: 'btn btn-success' %>
<% end %>
