                                          <i class="fa fa-star"></i> <i class="fa fa-star"></i> 
                                          <i class="fa fa-star"></i> 
                                        </li>
                                      </ul>
                                    </div> <!-- rating-wrap.// -->
                                    <p> Lorem ipsum dolor sit amet, consectetuer adipiscing elit, Lorem ipsum dolor sit amet, consectetuer adipiscing elit, Ut wisi enim ad minim veniam </p>
                                    <dl class="dlist-align">
                                    </dl>  <!-- item-property-hor .// -->
                                    <dl class="dlist-align">
                                      <dt>Categorias</dt>
                                        <% product.categories.each do |category| %>
                                        <dd><span class="badge badge-success"><%= category.name %></span></dd>
                                        <% end %>
                                        </dl>  <!-- item-property-hor .// -->
                                  
                                </article> <!-- col.// -->
                                <aside class="col-sm-3 border-left">
                                  <div class="action-wrap">
                                    <div class="price-wrap h4">
                                      <span class="price"><%= product.price %></span>	
                 
                                    </div> <!-- info-price-detail // -->
                                    <p class="text-success">Free shipping</p>
                                    <br>
                                    <p>
                                        <% if can? :update, Product %>
                                        <%= link_to  "Editar", edit_shop_product_path(@shop,product), class: 'btn btn-info', data:{remote: true}  %>
                                        <%= link_to  "Eliminar",shop_product_path(@shop, product), class: 'btn btn-danger', data:{ confirm: 'Are you ready?',
                                        'confirm-button-text': 'Im ready',
                                        'cancel-button-text': 'No way',
                                        'confirm-button-color': '#66CD00',
                                        'sweet-alert-type': 'info',
                                        text: 'This is a subtitle', remote: true}, method: :delete %>
          
                                        <% else %>
                                          <% if product.stock == 0 %>
                                                    <button type="button" class="btn btn-info" name="button">Producto Agotado</button>
                                              <%else %>
                                                <%= link_to "Agregar al Carrito",shop_product_orders_path(product.shop, product),data: {remote: true}, method: :post, class:"btn btn-primary" %>
                                                <%end%>
                                        <% end %>
                                    </p>
                                  </div> <!-- action-wrap.// -->
                                </aside> <!-- col.// -->
                              </div> <!-- row.// -->
                              </div> <!-- card-body .// -->
